
function c = find_center(U)
% Calcula  indice (i) para o qual x(i) corresponde ao valor do centro 
%   - x fun?ao de perten?a (vetor dos valores)
%   - c index

lines = size(U,1);
c = zeros(1,Linhas);

for i = 1:lines
    
    u = U(i,:);
    maxu = max(u);
    n = 0;      % numero de elementos com x(i) = m;
    s = 0;      % soma dos elementos com x(i) = m;
    
    for j = 1:length(u)
        if u(i) == max_u
            s = s + j;
            n = n + 1;
        end
    end    

    c(j) = round(s/n);
end

end % function